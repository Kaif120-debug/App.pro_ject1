<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<ScrollPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.kiranastore.controller.DashboardController"
            fitToWidth="true" fitToHeight="true">
    
    <VBox spacing="20" style="-fx-padding: 20;">
        <Label text="Dashboard" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
        
        <!-- Statistics Cards -->
        <GridPane hgap="20" vgap="20">
            <columnConstraints>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="25"/>
            </columnConstraints>
            
            <!-- Total Products Card -->
            <VBox style="-fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-padding: 20; -fx-background-color: white;"
                  GridPane.columnIndex="0" GridPane.rowIndex="0">
                <Label text="Total Products" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12;"/>
                <Label fx:id="totalProductsLabel" text="0" style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #2980b9;"/>
            </VBox>
            
            <!-- Total Stock Card -->
            <VBox style="-fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-padding: 20; -fx-background-color: white;"
                  GridPane.columnIndex="1" GridPane.rowIndex="0">
                <Label text="Total Stock Units" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12;"/>
                <Label fx:id="totalStockLabel" text="0" style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #27ae60;"/>
            </VBox>
            
            <!-- Inventory Value Card -->
            <VBox style="-fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-padding: 20; -fx-background-color: white;"
                  GridPane.columnIndex="2" GridPane.rowIndex="0">
                <Label text="Inventory Value" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12;"/>
                <Label fx:id="inventoryValueLabel" text="Rs. 0.00" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #e74c3c;"/>
            </VBox>
            
            <!-- Low Stock Count Card -->
            <VBox style="-fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-padding: 20; -fx-background-color: white;"
                  GridPane.columnIndex="3" GridPane.rowIndex="0">
                <Label text="Low Stock Items" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12;"/>
                <Label fx:id="lowStockCountLabel" text="0" style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #f39c12;"/>
            </VBox>
            
            <!-- Today's Sales Card -->
            <VBox style="-fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-padding: 20; -fx-background-color: white;"
                  GridPane.columnIndex="0" GridPane.rowIndex="1">
                <Label text="Today's Sales" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12;"/>
                <Label fx:id="todaySalesLabel" text="Rs. 0.00" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #2ecc71;"/>
            </VBox>
            
            <!-- Total Revenue Card -->
            <VBox style="-fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-padding: 20; -fx-background-color: white;"
                  GridPane.columnIndex="1" GridPane.rowIndex="1">
                <Label text="Total Revenue" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12;"/>
                <Label fx:id="totalRevenueLabel" text="Rs. 0.00" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #3498db;"/>
            </VBox>
            
            <!-- Average Transaction Card -->
            <VBox style="-fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-padding: 20; -fx-background-color: white;"
                  GridPane.columnIndex="2" GridPane.rowIndex="1" GridPane.columnSpan="2">
                <Label text="Avg Transaction Value" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12;"/>
                <Label fx:id="averageTransactionLabel" text="Rs. 0.00" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #9b59b6;"/>
            </VBox>
        </GridPane>
        
        <!-- Charts Section -->
        <VBox fx:id="chartsContainer" spacing="20" style="-fx-padding: 20; -fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-radius: 5;">
        </VBox>
    </VBox>
</ScrollPane>
