<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="mainContainer" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 12;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kiranastore.controller.MainDashboardController">

    <left>
        <VBox prefWidth="200" style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <Label style="-fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold;" text="RetailStoreManager" wrapText="true" />
            <Separator style="-fx-padding: 10 0;" />

            <Button fx:id="dashboardBtn" maxWidth="Infinity" style="-fx-padding: 10; -fx-font-size: 14;" text="Dashboard" />
            <Button fx:id="inventoryBtn" maxWidth="Infinity" style="-fx-padding: 10; -fx-margin: 5 0 0 0; -fx-font-size: 14;" text="Inventory" />
            <Button fx:id="billingBtn" maxWidth="Infinity" style="-fx-padding: 10; -fx-margin: 5 0 0 0; -fx-font-size: 14;" text="Billing" />
            <Button fx:id="reportsBtn" maxWidth="Infinity" style="-fx-padding: 10; -fx-margin: 5 0 0 0; -fx-font-size: 14;" text="Reports" />


            <Region VBox.vgrow="ALWAYS" />
            <Label style="-fx-text-fill: #95a5a6; -fx-font-size: 10;" text="Version 1.0" wrapText="true" />
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: #ecf0f1; -fx-padding: 20;">
        </StackPane>
    </center>

</BorderPane>
